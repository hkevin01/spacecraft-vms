root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{json,js,ts}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{c,h,cpp,hpp}]
indent_size = 4
max_line_length = 100

[*.py]
indent_size = 4
max_line_length = 88

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2
